{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "PUT Reaction",
    "description": "Body for a Reaction PUT request.",
    "type": "object",
    "properties": {
        "triggers": {
            "type":"array",
            "items": {
                "type": "string",
                "minLength": 3,
                "maxLength": 100
            }
        },
        "audio_url": {
            "type": "string"
        },
        "start": {
            "type": "string",
            "pattern": "^([0-9]{2}:){2}[0-9]{2}$",
            "minLength": 8,
            "maxLength": 8
        },
        "end": {
            "type": "string",
            "pattern": "^([0-9]{2}:){2}[0-9]{2}$",
            "minLength": 8,
            "maxLength": 8
        },
        "volume": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "content": {
            "type": "string",
            "maxLength": 2000
        },
        "persona": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_.]{3,25}$",
            "minLength": 3,
            "maxLength": 25
        }
    },
    "required": [
        "triggers"
    ],
    "anyOf": [
        {
            "required": ["audio_url"]
        },
        {
            "required": ["content"]
        }
    ],
    "dependencies": {
        "start": ["audio_url"],
        "end": ["audio_url"],
        "volume": ["audio_url"],
        "content": ["persona"]
    }
}