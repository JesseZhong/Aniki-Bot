{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "PUT Reaction",
    "description": "Body for a Reaction PUT request.",
    "type": "object",
    "properties": {
        "triggers": {
            "type":"array",
            "items": {
                "type": "string",
                "minLength": 3,
                "maxLength": 100,
                "pattern": "^[^\"']*$"
            }
        },
        "audio_url": {
            "type": "string",
            "pattern": "^https:\/\/(?:www\\.|)(?:(?:youtube\\.com\/(?:[^/\n]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\\.be\/)[^\"&?/\\s\n]{11}|(?:twitch\\.tv\/[a-zA-Z0-9_]{4,25}\/clip\/[a-zA-Z0-9-]*)(?:$|\/.*$|\\?.*$))"
        },
        "start": {
            "type": "string",
            "pattern": "^([0-9]{2}:){2}[0-9]{2}$",
            "minLength": 8,
            "maxLength": 8
        },
        "end": {
            "type": "string",
            "pattern": "^([0-9]{2}:){2}[0-9]{2}$",
            "minLength": 8,
            "maxLength": 8
        },
        "clip": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
            }
        },
        "volume": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "content": {
            "type": "string",
            "maxLength": 2000
        },
        "persona": {
            "type": "string",
            "pattern": "^(?i)([A-Z0-9-_.]{3,25}|[0-9A-F]{8}-[0-9A-F]{4}-4[0-9A-F]{3}-[89AB][0-9A-F]{3}-[0-9A-F]{12})$",
            "minLength": 3,
            "maxLength": 36
        }
    },
    "required": [
        "triggers"
    ],
    "anyOf": [
        {
            "required": ["audio_url"]
        },
        {
            "required": ["content"]
        }
    ],
    "dependencies": {
        "start": ["audio_url"],
        "end": ["audio_url"],
        "clip": ["audio_url"],
        "volume": ["audio_url"]
    }
}